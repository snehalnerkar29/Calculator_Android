<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLay0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/display_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@color/light_blue">
        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:cursorVisible="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:hint="Enter the value"
            android:textColor="@color/light_blue"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <!--first row-->
    <RelativeLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_screen">
        <Button
            android:id="@+id/btn_ac"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"

            android:layout_marginRight="1dp"
            android:background="@color/orange"
            android:text="@string/ac" />
        <Button
            android:id="@+id/btn_plus_minus"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_toRightOf="@id/btn_ac"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:text="@string/plus_minus" />
        <Button
            android:id="@+id/btn_percent"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:text="@string/percent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_plus_minus" />
        <Button
            android:id="@+id/btn_divide"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:text="@string/divide"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_percent" />
    </RelativeLayout>
    <!--second row-->
    <RelativeLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_row">
        <Button
            android:id="@+id/btn_seven"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:background="@color/cyan"
            android:text="@string/seven" />
        <Button
            android:id="@+id/btn_eight"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_toRightOf="@id/btn_seven"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:text="@string/eight" />
        <Button
            android:id="@+id/btn_nine"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_toRightOf="@id/btn_eight"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:text="@string/nine" />
        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_toRightOf="@id/btn_nine"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:text="@string/multiply" />
    </RelativeLayout>
    <!--third row-->
    <RelativeLayout
        android:id="@+id/third_row"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_row">
        <Button
            android:id="@+id/btn_four"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:background="@color/cyan"
            android:text="@string/four" />
        <Button
            android:id="@+id/btn_five"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_toRightOf="@id/btn_four"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:text="@string/five" />
        <Button
            android:id="@+id/btn_six"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_toRightOf="@id/btn_five"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:text="@string/six" />
        <Button
            android:id="@+id/btn_minus"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@id/btn_six"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:text="@string/minus" />
    </RelativeLayout>
    <!--fourth row-->
    <RelativeLayout
        android:id="@+id/four_row"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/third_row">
        <Button
            android:id="@+id/btn_one"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:background="@color/cyan"
            android:text="@string/one" />
        <Button
            android:id="@+id/btn_two"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_toRightOf="@id/btn_one"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:text="@string/two" />
        <Button
            android:id="@+id/btn_three"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:layout_toRightOf="@id/btn_two"
            android:text="@string/three" />
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_toRightOf="@id/btn_three"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:text="@string/plus" />
    </RelativeLayout>
    <!--fifth row-->
    <RelativeLayout
        android:id="@+id/five_row"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/four_row">
        <Button
            android:id="@+id/btn_zero"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:background="@color/cyan"
            android:text="@string/zero" />
        <Button
            android:id="@+id/btn_double_zero"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_toRightOf="@id/btn_zero"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:text="@string/double_zero" />
        <Button
            android:id="@+id/btn_dot"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_toRightOf="@id/btn_double_zero"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:text="@string/dot" />
        <Button
            android:id="@+id/btn_equal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_toRightOf="@id/btn_dot"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:text="@string/equal" />
    </RelativeLayout>

    </RelativeLayout>